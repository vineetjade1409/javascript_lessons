 var numbers = [1,5,9,15,5,10,25,30,90,10,5,2,5,4,6,8,9,2];
n = 10;

//validations
var isValidInput = true;
if ( n > numbers.length){
    isValidInput = false;
    console.log ("n is an invalid input")
}

//logic
if(isValidInput){
    var sum = 0;
    var x = 0;
    for (i=0; i<= n; i++){
        x = numbers[i] + x;
    };
    
    console.log("Sum of first " + n +" number is = " + x);
    console.log("Average of first" + n +"numbers is = " + x/n)        
}

